{{define "page:title"}}QR Code Bakery{{end}}

{{define "page:main"}}
<style> 
.center {
    text-align: center;
}

form {
    margin-top: 20px;
    }

input[type="text"] {
    padding: 8px;
    width: 250px;
    } 

input[type="submit"] {
    padding: 8px  16px; 
    background-color: #4CAF50;
    width: 170px; 
    color: white;
    border: none;
    cursor: pointer;  
    }


    /* Style for download button */

.center button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #008CBA;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}


.center button:hover {
    background-color: #005f7f;
}  
    
</style>
<p class="center">Welcome to QR Code Bakery.</p>
<br>
<div class="center">Please enter the string you want to QR Encode:</div> 
<div class="center">
<form action="/generate" method="post">
<input type="text" name="dataString" placeholder="Enter your text here....">
<input type="submit" value="Generate QR Code">
</form>
</div>

{{ if ne .QRCodeImagePath "" }}
<div class="center">
<img src="{{.QRCodeImagePath}}" alt="QR Code">
</div>
   <div class="center">
    <a href="{{.QRCodeImagePath}}" download="generated_qr_code.jpg">
    <button>Download QR Code</button>
    </a>
    </div>
{{ end }}
{{end}}   